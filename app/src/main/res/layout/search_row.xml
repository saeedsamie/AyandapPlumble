<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:layout_margin="10dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
      android:id="@+id/appIconIV"
      android:layout_width="50dp"
      android:layout_height="60dp"
      android:background="#00000000"
      android:src="@drawable/ic_launcher"/>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginRight="10dp"
      android:layout_weight="1"
      android:gravity="right|center"
      android:orientation="vertical">

      <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/appIconIV"
        android:layout_toRightOf="@+id/appIconIV"
        android:layout_weight="1"
        android:gravity="bottom|right"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Fullname"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"/>

      <TextView
        android:id="@+id/userFullname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignLeft="@+id/roomname"
        android:layout_alignStart="@+id/roomname"
        android:layout_below="@+id/roomname"
        android:layout_weight="1"
        android:gravity="top|right"
        android:maxLines="1"
        android:padding="3dp"
        android:text="username"
        android:textColor="#FFF"
        android:textSize="12sp"/>


    </LinearLayout>

    <TextView
      android:id="@+id/no"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:gravity="center"/>

  </LinearLayout>

</RelativeLayout>